:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    
    / Set the viewport width to device width for mobile
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    
    %title= content_for?(:title) ? yield(:title) : "CESED - Pesquisa Docente - 2013"
    
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/custom.modernizr" 
    = csrf_meta_tags
  %body
    / Header and Nav
    %nav{:class=>"top-bar"}
      %ul{:class=>"title-area"}
        / Title Area
        %li.name
          %h1
            %a{:href=>"#"} Pesquisa Institucional
      %section{:class=>"top-bar-section"}
        %ul.right
          %li.divider
          %li
            - if usuario_logado
              = link_to "#{usuario_logado.nome}, Sair", logout_path
            - else
              = link_to "Entrar", login_path
    / End Header and Nav
    
    / Main Grid Section
    .row
      - flash.each do |name, msg|
        - if msg.is_a?(String)
          %div{:class => "alert-box #{name == :notice ? "success" : "alert"}", :"data-alert" => true}
            = msg
            %a{:href => '#', :class => "close"} &times;
      = yield
    / End Grid Section
    
    / Footer
    %footer.row
      %div{:class=>"large-12 columns"}
        %hr
        .row
          %div{:class=>"large-6 columns"}
            %p &copy; Copyright LTI 2013, Todos os Direitos Reservados.
    
    = javascript_include_tag "application"